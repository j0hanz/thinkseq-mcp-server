{
  "name": "@j0hanz/thinkseq-mcp",
  "version": "1.2.7",
  "mcpName": "io.github.j0hanz/thinkseq",
  "description": "An thinking and reasoning engine for the Model Context Protocol (MCP).",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "sideEffects": false,
  "bin": {
    "thinkseq": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "validate:instructions": "node scripts/validate.mjs",
    "build": "npm run clean && tsc -p tsconfig.build.json && npm run validate:instructions && node scripts/assets.mjs",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "node --import tsx/esm --test tests/*.test.ts",
    "test:ci": "npm run build && npm test",
    "test:coverage": "npm run build && node --import tsx/esm --test --experimental-test-coverage tests/*.test.ts",
    "benchmark": "node --import tsx/esm benchmark/engine.bench.ts",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "inspector": "npx @modelcontextprotocol/inspector",
    "prepublishOnly": "npm run lint && npm run type-check && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "thinking",
    "reasoning"
  ],
  "author": "j0hanz",
  "repository": {
    "type": "git",
    "url": "https://github.com/j0hanz/thinkseq-mcp-server.git"
  },
  "homepage": "https://github.com/j0hanz/thinkseq-mcp-server#readme",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/node": "^25.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-de-morgan": "^2.0.0",
    "eslint-plugin-depend": "^1.4.0",
    "eslint-plugin-sonarjs": "^3.0.6",
    "eslint-plugin-unused-imports": "^4.3.0",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
